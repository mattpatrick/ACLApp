<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity = "center_horizontal" >
    
    	<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#FFFFFF"/>	
     <TextView
        android:text="Patient Information"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:textSize="32sp"/>
     	<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#FFFFFF"/>	
    
    <TextView
        android:text="Patient Sex"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="24sp" 
        />
	<RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
 		android:orientation = "horizontal"
 		>
        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male" 
            android:checked="true" 
            android:gravity = "left"/>
 
        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female" 
            android:gravity="right"/>
    </RadioGroup>
    <TextView
        android:text="Patient Age"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:textSize="24sp"/>
	<EditText
	    android:id="@+id/pt_age"
		android:layout_width="300dip"
		android:layout_height="wrap_content" 
		android:inputType="number"
	    />
	
	
	
	    <TextView
        android:text="Patient Height (inches)"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:textSize="24sp"/>
		<EditText
	    android:id="@+id/pt_height"
		android:layout_width="300dip"
		android:layout_height="wrap_content" 
		android:inputType="number"
	    />
		
			    <TextView
        android:text="Patient Weight (lbs)"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:textSize="24sp"/>
		<EditText
	    android:id="@+id/pt_weight"
		android:layout_width="300dip"
		android:layout_height="wrap_content" 
		android:inputType="number"
	    />
		
	<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#FFFFFF"/>	
     <TextView
        android:text="Physician Information"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:textSize="32sp"/>
     	<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#FFFFFF"/>
     	
    <TextView
        android:text="Hospital Name"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:textSize="24sp"/>
	<EditText
	    android:id="@+id/hospital"
		android:layout_width="300dip"
		android:layout_height="wrap_content" 
		android:inputType="text"
	    />	
	<TextView
        android:text="Physician Name"
        android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:textSize="24sp"/>
	<EditText
	    android:id="@+id/doctor"
		android:layout_width="300dip"
		android:layout_height="wrap_content" 
		android:inputType="text"
	    />	
	<Button 
	    android:id="@+id/add_Profile"
	   	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="Add Profile"
		android:onClick="addProfile"
		
		       
        android:background="@drawable/blue_button_color"
        android:textColor = "@color/white"
        android:fontFamily="sans-serif-thin" 
        android:textSize = "40sp"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
	    />
	<Button
	    android:id="@+id/cancel"
	   	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="Cancel"
		android:onClick="cancel"
		
		android:background="@drawable/blue_button_color"
        android:textColor = "@color/white"
        android:fontFamily="sans-serif-thin" 
        android:textSize = "40sp"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
		/>

	<TextView 
	    android:id = "@+id/recordView"
	    android:gravity="center"
       	android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
</LinearLayout>
