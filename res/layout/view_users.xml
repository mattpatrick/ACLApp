<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/black"
    android:weightSum="1">
	
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
       	android:layout_height = "600dip"
       	android:layout_weight = "0.8"
       	
       	android:divider="@android:color/transparent"
  		android:dividerHeight="10.0sp"
       	
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    </ListView>

    <Button
        android:id="@+id/newPatientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"

        
        android:onClick="newPatient"
        android:background="@drawable/blue_button_color"
        android:textColor = "@color/white"
        android:fontFamily="sans-serif-thin" 
        android:textSize = "40sp"
        android:text="Add New Patient Profile" 
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
     <Button
        android:id="@+id/returnHomeStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:onClick="goHome"
        android:background="@drawable/blue_button_color"
        android:textColor = "@color/white"
        android:fontFamily="sans-serif-thin" 
        android:textSize = "40sp"
        android:text="Return to Home Screen" 
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
   
</LinearLayout>